@model Category
@{
    ViewData["Title"] = "CreateCategory";
}

<form method="post">
    <div class="mt-3 p-3 border">
        <div class="row">
            <h2>Create new category</h2>
        </div>
        <div class="mt-2">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control"/>
        </div>
        <div class="mt-2">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" type="number" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary mt-2" style="width:150px">Create</button>
    </div>
</form>
