@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="p-4 mt-2">
    <div class="row">
        <div class="col-6">
            <h2>Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="CreateCategory"><i class="bi bi-plus-circle"></i> &nbsp Create category</a>
        </div>
    </div>
    <table class="table table-striped table-bordered mt-2">
        <thead>
            <tr>
                <th>
                    Category name
                </th>
                <th>
                    Display order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(Category category in Model)
            {
                <tr>
                    <td>
                        @category.Name
                    </td>
                    <td>
                        @category.DisplayOrder
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


