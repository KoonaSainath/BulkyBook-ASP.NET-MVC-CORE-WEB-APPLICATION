@model Category

@{
    ViewData["Title"] = "EditCategory";
}

@*Not mandatory to put attribute "asp-action" for form tag because it directly hits respective POST method on submit*@
<form method = "post" asp-action="EditCategory">
    <div class="mt-3 p-2 border">
        <div class="row mt-2">
            <h2>Edit category</h2>
        </div>
        <hr/>
        <div class="mt-2 p-2">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mt-2 p-2">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control"/>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" asp-controller="Category" asp-action="EditCategory" class="btn btn-primary mt-2" style="width:150px">Edit</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-info mt-2" style="width:150px">
            Back to list
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}





