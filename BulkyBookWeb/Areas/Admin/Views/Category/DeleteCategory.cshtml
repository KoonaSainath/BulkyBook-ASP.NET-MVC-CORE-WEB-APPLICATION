@model Category
@{
    ViewData["Title"] = "DeleteCategory";
}

<form method="post">
    <div class="mt-3 p-3">
        <div class="row mt-2">
            <h2>Delete category</h2>
        </div>
        <input asp-for="Id" hidden/>
        <div class="mt-2">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <div class="mt-2">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-primary mt-2" style="width:150px">
            Delete
        </button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-info mt-2" style="width:150px">
            Back to list
        </a>
    </div>
</form>

