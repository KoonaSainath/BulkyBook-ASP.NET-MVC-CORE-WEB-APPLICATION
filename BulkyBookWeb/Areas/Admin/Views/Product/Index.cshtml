
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4 mt-3">
    <div class="row mb-2">
        <div class="col-6">
            <h2>Products</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="UpsertProduct" asp-controller="Product" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Create a product</a>
        </div>
    </div>
    <table id="productsTable" class="table table-straped table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Category</th>
                <th>Cover type</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/LoadProductTable.js"></script>
}

